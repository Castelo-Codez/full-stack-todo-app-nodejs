doctype html
html(lang="en", class=dark ? "dark" : "")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="full stack todo app with node js")
        title todo app
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(
            rel="preconnect",
            href="https://fonts.gstatic.com",
            crossorigin=""
        )
        link(
            href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap",
            rel="stylesheet"
        )
        link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
        link(rel="stylesheet", href="/stylesheets/global/normalize.css")
        link(rel="stylesheet", href="/stylesheets/global/all.min.css")
        block links
        script(
            src="https://unpkg.com/validator@latest/validator.min.js",
            defer
        )

        script(
            src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js",
            defer
        ) 

        script(src="/javascripts/global.js", defer, type="module")
        script(src="/javascripts/all.min.js", defer) 
        block scripts
    body
    block content
